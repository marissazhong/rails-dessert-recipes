<h1><%=@recipe.name%></h1>

<h3>Prep Time: <%=@recipe.prep_time%> minutes</h3>
<h3>Cook Time: <%=@recipe.cook_time%> minutes</h3>

<h2>Ingredients:</h2>
<table id="ingredients-table">
    <tr>
        <th>Name</th>
        <th>Amount</th>
    </tr>
    <% @recipe.ingredients.each do |ingredient| %>
        <tr>
            <td><%= ingredient.name%></td>
        </tr>
    <% end %>
</table>